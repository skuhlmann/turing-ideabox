<div class="row">	
	<div class="span6">
	<h2>Idea Detail</h2>
		<h3><%= idea.title %></h3>
		<h6><%= idea.description %></h6>
		<h6>CATEGORY: <%= idea.category %> | TAGS: <%= idea.tags.join(", ") %></h6>
		<h5><a href="/<%= idea.id %>/edit">Edit Idea</a></h5>
			<p><form action='/<%= idea.id %>/like' method='POST' style="display: inline">
				<input type='submit' value="Good Idea +1" class="btn btn-default"/>
			</form></p>
			<p><form action='/<%= idea.id %>/unlike' method='POST' style="display: inline">
				<input type='submit' value="Bad Idea -1" class="btn btn-default"/>
			</form></p>
		<form action="/<%= idea.id %>" method="POST">
			<input type="hidden" name="_method" value="DELETE">
			<input type="submit" value="Delete Idea" class="btn btn-default"/>
		</form>	
	</div>
</div>